{
  "name": "pharmacy-desktop",
  "version": "1.0.1",
  "description": "Community pharmacy management desktop application",
  "author": "AfyaTrack",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"npm run electron:dev\"",
    "electron:dev": "wait-on http://localhost:5173 && electron .",
    "build:vue": "vite build",
    "build:electron": "electron-builder",
    "build": "npm run build:vue && npm run build:electron",
    "start": "cross-env NODE_ENV=production electron .",
    "dev:manual": "cross-env NODE_ENV=development electron ."
  },
  "build": {
    "appId": "com.afyatrack.pharmacy",
    "productName": "AfyaTrack",
    "icon": "build/icon", 
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "logic/**/*"
    ],
    "extraResources": [],
    "publish": [
      {
        "provider": "github",
        "owner": "Principius",
        "repo": "pharmacy-desktop"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build"
    }
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "chart.js": "^4.4.9",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "electron-updater": "^6.6.2",
    "flowbite": "^3.1.2",
    "knex": "^3.1.0",
    "pdfmake": "^0.2.20",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "sweetalert2": "^11.21.2",
    "vue": "^3.5.13",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "@vitejs/plugin-vue": "^5.2.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "wait-on": "^8.0.3"
  }
}
